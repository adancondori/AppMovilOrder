<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login_Activity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_logo_imagen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/title_descripcion"
                android:scaleType="fitXY"
                android:src="@drawable/carrito" />

            <ImageView
                android:id="@+id/iv_fondo_usuario"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_logo_imagen"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/title_descripcion"
                android:scaleType="fitXY"
                android:src="@drawable/ed_fondo" />

            <ImageView
                android:id="@+id/iv_fondo_contra"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_fondo_usuario"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/title_descripcion"
                android:scaleType="fitXY"
                android:src="@drawable/ed_fondo" />

            <TextView
                android:id="@+id/tv_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_fondo_contra"
                android:layout_below="@+id/iv_fondo_contra"
                android:layout_marginTop="30dp"
                android:text="@string/title_guardar_id"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_iniciar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_guardar"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_iniciar_sesion"
                android:text="Iniciar SesiÃ³n"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_contrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_fondo_contra"
                android:layout_alignLeft="@+id/iv_fondo_contra"
                android:layout_alignRight="@+id/iv_fondo_contra"
                android:layout_alignTop="@+id/iv_fondo_contra"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#00000000"
                android:ems="10"
                android:hint="@string/title_contrasena"
                android:inputType="textPassword"
                android:text="admin"
                android:textColorHint="#a3a3a3"
                android:textSize="20sp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/et_id_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_fondo_usuario"
                android:layout_alignLeft="@+id/et_contrasena"
                android:layout_alignRight="@+id/et_contrasena"
                android:layout_alignTop="@+id/iv_fondo_usuario"
                android:background="#00000000"
                android:ems="10"
                android:hint="@string/title_guardar_id"
                android:inputType="textCapCharacters|textPersonName"
                android:text="admin"
                android:textColor="#000000"
                android:textColorHint="#a3a3a3"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_iniciar_sesion"
                android:layout_centerHorizontal="true"
                android:src="@drawable/border_redondeado" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/border_redondeado" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>